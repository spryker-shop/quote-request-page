{% extends template('page-layout-main') %}

{% define data = {
    shipmentGroups: _view.shipmentGroups | default([]),
    breadcrumbExtend: [],
} %}

{% set hasMultiShipments = data.shipmentGroups | length > 1 %}
{% set quote = null %}

{% block breadcrumbs %}
    {% set breadcrumbSteps = [
        {
            label: 'customer.account' | trans,
            url: path('customer/overview'),
        },
        {
            label: 'quote_request_page.quote_request' | trans,
            url: path('quote-request'),
        },
    ] %}
    {% set breadcrumbSteps = breadcrumbSteps | merge(data.breadcrumbExtend) %}

    {% include molecule('breadcrumb') with {
        data: {
            steps: breadcrumbSteps,
        },
    } only %}
{% endblock %}

{% block content %}
    <div class="grid">
        <div class="col col--sm-12 col--xl-8">
            <div class="box">
                {% block orderInformation %}{% endblock %}
            </div>
        </div>

        <div class="col col--sm-12 col--xl-4">
            <div class="box">
                {% block rfqInformation %}{% endblock %}
            </div>
        </div>
    </div>

    <div class="grid">
        <div class="col col--sm-12 col--xl-8">
            {% block rfqContent %}
                {% if quote %}
                    {% if hasMultiShipments %}
                        {% block priceModeForMultiShipments %}
                            {% if quote.priceMode %}
                                <div class="box">
                                    {% include molecule('price-mode') with {
                                        data: {
                                            priceMode: quote.priceMode,
                                        },
                                    } only %}
                                </div>
                            {% endif %}
                        {% endblock %}

                        {% block productsWrapperForMultiShipments %}
                            {% for shipmentGroup in data.shipmentGroups %}
                                <div class="box">
                                    {% block titleForMultiShipments %}
                                        <div class="grid grid--justify">
                                            <h4 class="col">
                                                {{ 'quote_request_page.quote_request.shipment_counter' | trans({
                                                    '%index%': loop.index,
                                                    '%length%': data.shipmentGroups | length,
                                                }) }}
                                            </h4>

                                            <div class="col">
                                                {{ quote.items | length }}
                                            </div>
                                        </div>
                                    {% endblock %}

                                    {% block productsForMultiShipments %}
                                        {% include organism('product-and-shipment-view', 'QuoteRequestPage') ignore missing with {
                                            data: {
                                                quote: quote,
                                                items: shipmentGroup.items,
                                                shipment: shipmentGroup.shipment,
                                                hasMultiShipments: hasMultiShipments,
                                                isConfiguredBundleEditable: false,
                                                isConfiguredBundleQuantitySummaryVisible: true,
                                            },
                                        } only %}
                                    {% endblock %}
                                </div>
                            {% endfor %}
                        {% endblock %}
                    {% endif %}

                    {% if not hasMultiShipments %}
                        {% block priceModeForSingleShipment %}
                            <div class="box grid grid--justify">
                                {% if quote.priceMode %}
                                    {% include molecule('price-mode') with {
                                        class: 'col',
                                        data: {
                                            priceMode: quote.priceMode,
                                        },
                                    } only %}
                                {% endif %}

                                <div class="col">
                                    {{ quote.items | length }}
                                </div>
                            </div>
                        {% endblock %}

                        {% block productsForSingleShipment %}
                            {% include organism('product-and-shipment-view', 'QuoteRequestPage') ignore missing with {
                                data: {
                                    quote: quote,
                                    items: quote.items,
                                    shipment: quote.shipment,
                                    hasMultiShipments: hasMultiShipments,
                                    isConfiguredBundleEditable: false,
                                },
                            } only %}
                        {% endblock %}
                    {% endif %}
                {% endif %}
            {% endblock %}
        </div>

        <div class="col col--sm-12 col--xl-4">
            {% block rfqSidebar %}{% endblock %}
        </div>
    </div>
{% endblock %}

